<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/show_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true"
        />
    <com.youth.banner.Banner
        android:id="@+id/show_banner"
        android:layout_width="0dp"
        android:layout_height="400dp"
        fresco:layout_constraintTop_toBottomOf="@id/show_image"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/show_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toBottomOf="@id/show_banner"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        android:text="title"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/show_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toBottomOf="@id/show_title"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        android:text="price"
        android:textSize="20sp"
        android:textColor="#f00"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/show_bean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintBottom_toBottomOf="parent"
        fresco:layout_constraintRight_toRightOf="parent"
        android:text="加入购物车"
        android:textColor="#fff"
        android:background="#f00"
        />
</android.support.constraint.ConstraintLayout>