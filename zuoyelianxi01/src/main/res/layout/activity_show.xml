<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        android:src="@drawable/ic_left_name"
        />
    <ImageView
        android:id="@+id/image_dian"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        android:src="@drawable/ic_horiz_name"
        />
    <ImageView
        android:id="@+id/image_fen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_share_name"
       app:layout_constraintRight_toLeftOf="@id/image_dian"
        app:layout_constraintTop_toTopOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="@id/tab"
        android:layout_marginRight="5dp"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/image_left"
        app:layout_constraintRight_toLeftOf="@id/image_fen"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabIndicatorHeight="0dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>